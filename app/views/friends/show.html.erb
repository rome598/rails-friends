
<div class="container bg-secondary-subtle p-5">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name%></h1>
  <p> <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
  <hr class="my-4">
  <div>
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-success" %> |
    <%= link_to "Back", friends_path, class:"btn btn-dark" %>
  </div>
  <br/>
    <%= button_to "Delete", @friend, method: :delete, form: {style: 'display:inline-block;'}, form: {data: { turbo_confirm: 'Are you sure?' }}, class: "btn btn-danger" %>
</div>

